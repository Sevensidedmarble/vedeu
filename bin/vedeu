#!/usr/bin/env ruby

require 'rake'
bundler_message = 'Bundler is required. Please install bundler with ' \
                  "'gem install bundler'"
begin
  require 'bundler'
rescue LoadError
  puts bundler_message
end

fail bundler_message unless defined?(Bundler)

require 'vedeu'
require 'vedeu_cli'

Vedeu::CLI::Main.start(ARGV.dup)
